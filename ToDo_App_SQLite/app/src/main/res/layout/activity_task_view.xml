<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskView">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fitsSystemWindows="true"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/google" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceDim"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarWidgetTheme"
        tools:layout_editor_absoluteY="118dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/deleteTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/ic_delete"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="664dp" />

        <TextView
            android:id="@+id/markCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark Completed"
            android:textSize="15sp"
            android:layout_gravity="right"
            android:padding="15dp"
            android:layout_margin="15dp"/>


    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/taskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:textSize="25sp"
        style="@style/EditTextStyle"
        app:layout_constraintTop_toBottomOf="@+id/appBar"/>

    <ImageView
        android:id="@+id/dateIco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/taskTitle"
        app:layout_constraintTop_toBottomOf="@+id/taskTitle"
        app:srcCompat="@drawable/ic_date" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/taskDate"
        style="@style/EditTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="17dp"
        android:paddingTop="10dp"
        android:text="task_date"
        android:textSize="15sp"
        android:gravity="center|start"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dateIco"
        app:layout_constraintTop_toBottomOf="@+id/taskTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>